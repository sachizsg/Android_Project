<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="100dp"
    android:paddingRight="5dp"
    android:paddingBottom="10dp">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/pharmlogo3"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/phynameView"
        android:layout_toRightOf="@+id/imageView"
        android:textSize="18dp"
        android:textColor="#ff163069"
        android:layout_alignParentTop="false"
        android:paddingTop="10dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/addView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_below="@+id/phynameView"
        android:layout_alignRight="@+id/phynameView"
        android:layout_alignEnd="@+id/phynameView"
        android:layout_marginTop="2dp"
        android:textSize="16dp" />

    <ImageButton
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/nextButn"
        android:background="@drawable/ic_action_next_item"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp" />

</RelativeLayout>