<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="csi.myapplication.controllers.applicationcontroller.DetailPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:fillViewport="true"
        android:scrollbars="none"
        >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:id="@+id/relativeLayout2"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="232dp"
            android:id="@+id/relativeLayout3"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/imageView4"
                android:background="@drawable/hospitalbkgs"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="42dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Name"
                android:id="@+id/hosName"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="18dp"
                android:background="#ffc4c3c0"
                android:paddingLeft="58dp"
                android:paddingTop="8dp" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/imageView11"
                android:layout_alignBottom="@+id/hosName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/hosp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="14dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relativeLayout3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Address Line1"
                android:id="@+id/addressLine1"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="#ffc9c9c9"
                android:paddingLeft="12dp"
                android:paddingTop="2dp"
                android:paddingRight="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Address Line2"
                android:id="@+id/addressLine2"
                android:background="#ffc9c9c9"
                android:paddingLeft="12dp"
                android:paddingTop="2dp"
                android:layout_below="@+id/addressLine1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:paddingRight="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Contact Number"
                android:id="@+id/contactnum"
                android:layout_alignTop="@+id/addressLine2"
                android:layout_alignLeft="@+id/addressLine2"
                android:layout_alignStart="@+id/addressLine2"
                android:layout_marginTop="42dp"
                android:layout_marginRight="12dp"
                android:background="#ffc9c9c9"
                android:paddingLeft="12dp"
                android:paddingTop="2dp"
                android:paddingRight="4dp" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:id="@+id/makeCall"
                android:background="@drawable/call"
                android:layout_below="@+id/contactnum"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/textView5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="285dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Make a Call"
                android:id="@+id/textView4"
                android:textColor="#ffffffff"
                android:textSize="20dp"
                android:layout_alignTop="@+id/makeCall"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:background="@drawable/ic_call"
                android:layout_alignTop="@+id/makeCall"
                android:layout_alignLeft="@+id/makeCall"
                android:layout_alignStart="@+id/makeCall"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="3dp" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:id="@+id/viewMap"
                android:layout_below="@+id/makeCall"
                android:layout_alignLeft="@+id/makeCall"
                android:layout_alignStart="@+id/makeCall"
                android:background="@drawable/locaton"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:onClick="setLoadMap" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View On Map"
                android:id="@+id/textView6"
                android:layout_alignBottom="@+id/viewMap"
                android:layout_alignLeft="@+id/textView4"
                android:layout_alignStart="@+id/textView4"
                android:layout_marginBottom="10dp"
                android:textColor="#ffffffff"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView7"
                android:background="@drawable/ic_place_map"
                android:layout_below="@+id/makeCall"
                android:layout_alignLeft="@+id/imageView3"
                android:layout_alignStart="@+id/imageView3"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Number"
                android:id="@+id/adNum"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/addressLine1"
                android:layout_alignStart="@+id/addressLine1"
                android:layout_alignRight="@+id/addressLine1"
                android:layout_alignEnd="@+id/addressLine1"
                android:background="#ffc9c9c9"
                android:paddingLeft="12dp"
                android:paddingTop="2dp"
                android:paddingRight="4dp" />

        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
</RelativeLayout>
